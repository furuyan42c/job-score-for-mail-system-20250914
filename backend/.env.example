# ============================================================================
# バイト求人マッチングシステム - 環境変数設定
# ============================================================================

# 基本設定
APP_NAME="バイト求人マッチングシステム"
VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development
SECRET_KEY=your-super-secret-key-here-minimum-32-characters-long

# データベース設定（Supabase）
DATABASE_URL=postgresql+asyncpg://user:password@host:port/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# データベース接続プール設定
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# CORS設定
ALLOWED_HOSTS=localhost,127.0.0.1,*.yourdomain.com

# Redis設定（キャッシュ・セッション）
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# バッチ処理設定
BATCH_SIZE=1000
MAX_WORKERS=4
SCORING_BATCH_SIZE=5000
EMAIL_BATCH_SIZE=100

# マッチング設定
MATCHING_SCORE_THRESHOLD=60.0
MAX_DAILY_PICKS_PER_USER=40
RECOMMENDATION_SECTIONS=6

# メール設定
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME="バイト求人マッチング"

# AI・ML設定
OPENAI_API_KEY=sk-your-openai-api-key
ML_MODEL_PATH=./models
SCORING_MODEL_VERSION=v1.0

# 外部API設定
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
SEMRUSH_API_KEY=your-semrush-api-key

# ファイルアップロード設定
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ログ設定
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# セキュリティ設定
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8

# パフォーマンス設定
QUERY_TIMEOUT=30
API_RATE_LIMIT=1000
SLOW_QUERY_THRESHOLD=1.0

# 監視・アラート設定
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_PORT=8001

# 外部サービス設定
STRIPE_API_KEY=sk_test_your-stripe-api-key
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# AWS設定（オプション）
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-1
AWS_S3_BUCKET=your-s3-bucket

# Google Cloud設定（オプション）
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project-id

# 開発・テスト設定
TEST_DATABASE_URL=sqlite:///./test.db
PYTEST_CURRENT_TEST=true

# ============================================================================
# 設定ファイルの使用方法:
# 1. このファイルを .env にコピー
# 2. 各値を実際の値に置き換え
# 3. 本番環境では .env ファイルを安全な場所に保管
# ============================================================================