# T074: Environment Configuration Example
# Copy this file to .env and fill in your actual values

# ================================
# Supabase Configuration
# ================================

# Supabase Project URL (from your Supabase dashboard)
SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Anonymous Key (from your Supabase dashboard > Settings > API)
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase Service Role Key (from your Supabase dashboard > Settings > API)
# ⚠️ KEEP THIS SECRET - provides admin access to your database
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase JWT Secret (from your Supabase dashboard > Settings > API)
SUPABASE_JWT_SECRET=your-jwt-secret

# Database URL for direct connections
DATABASE_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres

# ================================
# Application Configuration
# ================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Application URL
APP_URL=http://localhost:3000

# API Configuration
API_HOST=localhost
API_PORT=8000
API_DEBUG=true

# ================================
# Database Configuration
# ================================

# Database connection pool settings
DB_POOL_SIZE=100
DB_MAX_OVERFLOW=200
DB_POOL_TIMEOUT=30

# Database retry settings
SUPABASE_MAX_RETRIES=3
SUPABASE_RETRY_DELAY=1.0
SUPABASE_TIMEOUT=30

# ================================
# Real-time Configuration
# ================================

# Real-time service settings
REALTIME_ENABLED=true
REALTIME_MAX_CONNECTIONS=1000
REALTIME_MESSAGE_RATE_LIMIT=100

# WebSocket configuration
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=54324

# ================================
# Storage Configuration
# ================================

# Storage settings
STORAGE_ENABLED=true
STORAGE_MAX_FILE_SIZE=104857600  # 100MB in bytes
STORAGE_DEFAULT_BUCKET=files

# File upload limits
MAX_UPLOAD_SIZE=100MB
ALLOWED_FILE_EXTENSIONS=.csv,.pdf,.txt,.png,.jpg,.jpeg,.gif,.doc,.docx

# ================================
# Email Configuration
# ================================

# Email service provider (smtp, sendgrid, aws_ses, mailgun)
EMAIL_PROVIDER=smtp

# SMTP Configuration (for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_SECURE=false

# SendGrid Configuration (for production)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Email addresses
EMAIL_FROM_DEFAULT=noreply@example.com
EMAIL_FROM_NOTIFICATIONS=notifications@example.com
EMAIL_FROM_BULK=bulk@example.com