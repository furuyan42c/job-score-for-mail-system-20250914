# Environment variables for Next.js application
# Copy this file to .env.local and fill in your actual values

# Application
NEXT_PUBLIC_APP_NAME=Job Matching System
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment
NODE_ENV=development

# =====================================================================================
# SUPABASE CONFIGURATION (Required)
# =====================================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Server-side only (optional, for admin operations)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =====================================================================================
# API CONFIGURATION
# =====================================================================================
NEXT_PUBLIC_API_URL=http://localhost:3000
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# =====================================================================================
# FEATURE FLAGS
# =====================================================================================
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_CACHING=true
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
ENABLE_PERFORMANCE_MONITORING=false

# =====================================================================================
# RATE LIMITING
# =====================================================================================
RATE_LIMIT_BATCH_OPERATIONS=5
RATE_LIMIT_SCORING_REQUESTS=10
RATE_LIMIT_EMAIL_SENDS=100

# =====================================================================================
# CACHE CONFIGURATION (in seconds)
# =====================================================================================
CACHE_TTL_SHORT=30
CACHE_TTL_MEDIUM=300
CACHE_TTL_LONG=1800

# =====================================================================================
# EMAIL CONFIGURATION
# =====================================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# =====================================================================================
# EXTERNAL SERVICES
# =====================================================================================
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# =====================================================================================
# SECURITY
# =====================================================================================
ENABLE_CSRF_PROTECTION=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Database (example configurations)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
REDIS_URL=redis://localhost:6379

# Authentication (NextAuth.js example)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# OAuth Providers (examples)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_ID=your-github-client-id
GITHUB_SECRET=your-github-client-secret

# API Keys (examples)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

SENDGRID_API_KEY=your-sendgrid-api-key

# External Services
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Storage (AWS S3 example)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-bucket-name

# Email
EMAIL_SERVER=smtp://username:password@smtp.example.com:587
EMAIL_FROM=noreply@example.com

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false

# Development
VERCEL_URL=
ANALYZE=false

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=15000