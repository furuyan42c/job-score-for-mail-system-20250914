{
  "commands": {
    "kiro": {
      "description": "Kiroスタイル仕様駆動開発の初期化",
      "script": "./.claude/commands/kiro.js",
      "usage": "/kiro [機能名]",
      "examples": [
        "/kiro ユーザー管理",
        "/kiro 商品検索",
        "/kiro 決済システム"
      ]
    },
    "cifix": {
      "description": "CI/CDエラーの自動検証と修正",
      "script": "./.claude/commands/cifix.js",
      "usage": "/cifix [options]",
      "examples": [
        "/cifix --auto-commit",
        "/cifix --skip-tests --retries=5",
        "/cifix"
      ]
    },
    "merge": {
      "description": "安全なマージ処理とチェック",
      "script": "./.claude/commands/merge.js",
      "usage": "/merge [target-branch] [base-branch]",
      "examples": [
        "/merge feature/auth main",
        "/merge --squash --auto-push",
        "/merge --backup --delete-branch"
      ]
    },
    "analyze": {
      "description": "コードベースの詳細分析",
      "script": "./.claude/commands/analyze.js",
      "usage": "/analyze [options]",
      "examples": [
        "/analyze --full --report",
        "/analyze --security --performance",
        "/analyze --git"
      ]
    },
    "refactor": {
      "description": "コードリファクタリング支援",
      "script": "./.claude/commands/refactor.js",
      "usage": "/refactor [options]",
      "examples": [
        "/refactor --analyze --file=src/app.js",
        "/refactor --auto --fix-whitespace",
        "/refactor --extract-method --start=10 --end=20"
      ]
    },
    "deploy": {
      "description": "デプロイメント管理",
      "script": "./.claude/commands/deploy.js",
      "usage": "/deploy [options]",
      "examples": [
        "/deploy --platform=vercel",
        "/deploy --env=staging --skip-checks",
        "/deploy --rollback --platform=heroku"
      ]
    },
    "optimize": {
      "description": "パフォーマンス最適化",
      "script": "./.claude/commands/optimize.js",
      "usage": "/optimize [options]",
      "examples": [
        "/optimize --full --plan",
        "/optimize --auto --deps --format",
        "/optimize --bundle --images"
      ]
    }
  },
  "aliases": {
    "k": "kiro",
    "init": "kiro",
    "仕様": "kiro",
    "ci": "cifix",
    "fix": "cifix",
    "m": "merge",
    "a": "analyze",
    "分析": "analyze",
    "r": "refactor",
    "リファクタ": "refactor",
    "d": "deploy",
    "デプロイ": "deploy",
    "o": "optimize",
    "最適化": "optimize",
    "perf": "optimize"
  }
}
