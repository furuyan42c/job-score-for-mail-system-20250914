# Docker Environment Configuration for Job Matching System
# Copy this to .env for local development

# Database Configuration
POSTGRES_DB=job_matching
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_postgres_password_2024
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=secure_redis_password_2024
REDIS_HOST=redis
REDIS_PORT=6379

# Application Configuration
APP_ENV=production
LOG_LEVEL=INFO
API_PORT=8000
DEBUG=false

# JWT and Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@yourcompany.com

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord Notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure_grafana_password_2024
PROMETHEUS_RETENTION_DAYS=7
ALERT_EMAIL=alerts@yourcompany.com

# Batch Processing Configuration
BATCH_SIZE=1000
BATCH_TIMEOUT_SECONDS=3600
BATCH_MEMORY_LIMIT=2147483648  # 2GB in bytes
BATCH_CPU_LIMIT=2.0
BATCH_SCHEDULE_ENABLED=true
BATCH_CRON_SCHEDULE=0 2 * * *  # Daily at 2 AM

# External Services
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
OPENAI_API_KEY=your-openai-api-key-if-needed

# File Processing
UPLOAD_DIRECTORY=/app/data/imports
EXPORT_DIRECTORY=/app/data/exports
MAX_FILE_SIZE_MB=100

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,api
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Performance Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0
REDIS_MAX_CONNECTIONS=100

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/app/logs/application.log
LOG_ROTATION_SIZE=100MB
LOG_BACKUP_COUNT=10