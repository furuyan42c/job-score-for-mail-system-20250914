# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Python
[*.py]
indent_size = 4
max_line_length = 100

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# HTML
[*.{html,htm}]
indent_size = 2

# CSS/SCSS/LESS
[*.{css,scss,less}]
indent_size = 2

# XML
[*.{xml,svg}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Package files
[package.json]
indent_size = 2

# Configuration files
[*.{conf,config,ini}]
indent_size = 2

# Go
[*.go]
indent_style = tab

# Ruby
[*.rb]
indent_size = 2

# PHP
[*.php]
indent_size = 4

# Java
[*.java]
indent_size = 4

# C/C++
[*.{c,cpp,h,hpp}]
indent_size = 4

# Rust
[*.rs]
indent_size = 4